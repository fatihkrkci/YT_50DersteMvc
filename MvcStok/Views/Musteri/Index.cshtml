@using MvcStok.Models.Entity
@model List<Musteriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı:</b> @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}

<div style="margin-bottom: 1em">
    <a href="/Musteri/Ekle/" class="btn btn-primary">Yeni Müşteri Ekle</a>
</div>

<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>İşlemler</th>
        <th>Alert</th>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.MusteriID</th>
                <td>@musteri.MusteriAd</td>
                <td>@musteri.MusteriSoyad</td>
                <td>
                    <a href="/Musteri/Sil/@musteri.MusteriID" class="btn btn-danger">Sil</a>
                    <a href="/Musteri/MusteriGetir/@musteri.MusteriID" class="btn btn-success">Güncelle</a>
                </td>
                <td>@Html.ActionLink("Sil Butonu", "Sil", new { id = musteri.MusteriID }, new { @class = "btn btn-warning", onClick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>
            </tr>
        }
    </tbody>
</table>