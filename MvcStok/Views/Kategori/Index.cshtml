@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-bottom: 1em">
    <a href="/Kategori/Ekle/" class="btn btn-primary">Yeni Kategori Ekle</a>
</div>

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <th>@kategori.KategoriID</th>
                <td>@kategori.KategoriAd</td>
                <td>
                    <a href="/Kategori/Sil/@kategori.KategoriID" class="btn btn-danger">Sil</a>
                    <a href="/Kategori/KategoriGetir/@kategori.KategoriID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa=>Url.Action("Index", new { sayfa }))