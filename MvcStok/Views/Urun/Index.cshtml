@using MvcStok.Models.Entity
@model List<Urunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-bottom: 1em">
    <a href="/Urun/Ekle/" class="btn btn-primary">Yeni Ürün Ekle</a>
</div>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <th>@urun.UrunID</th>
                <td>@urun.UrunAd</td>
                <td>@urun.Marka</td>
                <td>@urun.Kategoriler.KategoriAd</td>
                <td>@urun.Fiyat</td>
                <td>@urun.Stok</td>
                <td>
                    <a href="/Urun/Sil/@urun.UrunID" class="btn btn-danger">Sil</a>
                    <a href="/Urun/UrunGetir/@urun.UrunID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>