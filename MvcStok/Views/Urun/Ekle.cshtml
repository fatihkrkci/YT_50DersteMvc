@model MvcStok.Models.Entity.Urunler

@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" required maxlength="50"/>
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="Marka" placeholder="Marka Yazınız.." required/>
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(x => x.Kategoriler.KategoriID, (List<SelectListItem>)ViewBag.kategoriler, new { @class="form-control" })
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>